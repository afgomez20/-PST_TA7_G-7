<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgLibro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/orgullo_prejuicio"/>
        <TextView
            android:id="@+id/tituloLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf ="@+id/imgLibro"
            android:layout_toEndOf="@id/imgLibro"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/autorLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="autor: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below ="@+id/tituloLibro"
            android:layout_toEndOf="@id/imgLibro"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/editorialLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="editorial: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below ="@+id/autorLibro"
            android:layout_toEndOf="@id/imgLibro"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>